<config xmlns="http://tail-f.com/ns/config/1.0">
  <facilities xmlns="https://curity.se/ns/conf/base">
    <http>
      <client>
        <id>workload_trust_client</id>
        <tls>
          <use-truststore>true</use-truststore>
        </tls>
      </client>
    </http>
    <crypto>
      <ssl>
        <server-truststore>
          <server-certificate>
            <id>workload_root_ca</id>
            <size>2048</size>
            <keystore>#{WORKLOAD_ROOT_CA}</keystore>
            <type>rsa</type>
          </server-certificate>
        </server-truststore>
      </ssl>
    </crypto>
  </facilities>
</config>
